---
const { title, desc } = Astro.props;
---

<section class="mt-10 sm:mt-14">
  <div class="mb-5 flex items-end justify-between gap-4">
    <div>
      <h2 class="text-xl font-extrabold tracking-tight sm:text-2xl">{title}</h2>
      {desc && <p class="mt-1 text-sm text-zinc-400">{desc}</p>}
    </div>
  </div>
  <slot />
</section>
